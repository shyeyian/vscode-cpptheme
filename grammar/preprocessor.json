{
    "scopeName": "preprocessor.injection",
    "injectionSelector": "L:source.cpp & -comment & -string",
    "patterns": [
        {
            "begin": "^(\\s)*#.*\\\\$",
            "end": "^[^\\\\]*$",
            "name": "meta.preprocessor.cpp"
        },
        {
            "match": "^(\\s)*#([^/]|/[^/\\*])*",
            "name": "meta.preprocessor.cpp"
        }
    ]
}