{
	"name": "cpptheme",
	"displayName": "cpptheme",
	"description": "cpptheme",
	"icon": "share/icon.png",
	"publisher": "anonymouspc",
	"version": "1.0.8",
	"engines": {
		"vscode": "^1.100.0"
	},
	"categories": [
		"Themes"
	],
	"contributes": {
		"grammars": [
			{
				"scopeName": "module.injection",
				"injectTo": [
					"source.cpp"
				],
				"path": "grammar/module.json"
			},
            {
                "scopeName": "noexcept.injection",
                "injectTo": [
                    "source.cpp"
                ],
                "path": "grammar/noexcept.json"
            },
			{
				"scopeName": "preprocessor.injection",
				"injectTo": [
					"source.cpp"
				],
				"path": "grammar/preprocessor.json"
			},
			{
				"scopeName": "punctuation.injection",
				"injectTo": [
					"source.cpp"
				],
				"path": "grammar/punctuation.json"
			}
		],
		"themes": [
			{
				"label": "cpptheme-light",
				"uiTheme": "vs",
				"path": "theme/light.json"
			},
			{
				"label": "cpptheme-dark",
				"uiTheme": "vs-dark",
				"path": "theme/dark.json"
			}
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/anonymouspc/cpptheme"
	}
}
